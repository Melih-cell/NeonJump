{
  "mcpServers": {
    "mcp-unity": {
      "command": "/root/.local/bin/uvx",
      "args": [
        "--from",
        "mcpforunityserver",
        "mcp-for-unity",
        "--transport",
        "stdio"
      ],
      "env": {
        "UNITY_MCP_HTTP_URL": "http://127.0.0.1:8080",
        "UNITY_MCP_SKIP_STARTUP_CONNECT": "true"
      }
    }
  }
}
